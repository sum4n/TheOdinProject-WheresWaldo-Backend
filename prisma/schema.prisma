generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  xLeft       Int
  xRight      Int
  yTop        Int
  yBottom     Int
  imgUrl      String     @unique
  Gameboard   Gameboard? @relation(fields: [gameboardId], references: [id])
  gameboardId Int?
}

model Gameboard {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  imgUrl     String      @unique
  characters Character[]
}

model Score {
  id       Int      @id @default(autoincrement())
  username String
  time     String
  cratedAt DateTime @default(now())
}
