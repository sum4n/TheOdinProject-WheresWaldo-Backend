generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  xLeft       Int
  xRight      Int
  yTop        Int
  yBottom     Int
  imgUrl      String     @unique
  Gameboard   Gameboard? @relation(fields: [gameboardId], references: [id])
  gameboardId Int?
}

model Gameboard {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  imgUrl     String      @unique
  characters Character[]
  scores     Score[]
}

model Score {
  id          Int       @id @default(autoincrement())
  username    String
  time        Float
  createdAt   DateTime  @default(now())
  Gameboard   Gameboard @relation(fields: [gameboardId], references: [id])
  gameboardId Int
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text
  expiresAt DateTime
}
